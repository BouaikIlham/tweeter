<%= render layout: "auth_layout", locals: { title: "Sign up" }  do %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-2">
    <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-2">
    <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-2">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-2">
    <%= f.label :password, class: "block text-gray-700 text-sm font-bold"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="mb-2">
    <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="mb-2">
    <%= f.submit "Sign up", class: "bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
<% end %>